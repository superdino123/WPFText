<Window x:Class="ControlTestSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTestSlider"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Slider Width="150" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="2" IsDirectionReversed="True" Margin="0,100,0,0"
                IsMoveToPointEnabled="False" LargeChange="5" Ticks="1,5,6,7,9"></Slider>
    </Grid>
</Window>
