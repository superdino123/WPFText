<Window x:Class="ControlTestRepeatButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTestRepeatButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid VerticalAlignment="Center">
        <WrapPanel>
            <Button Margin="6" Width="80" Name="button1" ClickMode="Hover">
                悬停
            </Button>
            <Button Margin="6" Width="80" Name="button2" ClickMode="Press">
                按下
            </Button>
            <Button Margin="6" Width="80" Name="button3">按下并释放</Button>
            <RepeatButton Margin="6" Width="80" Name="button4" Delay="500" Interval="100">减少</RepeatButton>
            <RepeatButton Margin="6" Width="80" Name="button5" Delay="500" Interval="100">增加</RepeatButton>
            <Label Margin="2" Width="80" Name="label1" HorizontalContentAlignment="Center" FontWeight="Bold"  
                   Background="LightSkyBlue" Height="26">0</Label>
        </WrapPanel>
    </Grid>
</Window>
