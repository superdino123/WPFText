<Window x:Class="MyControlTestColor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lib="clr-namespace:MyControlTestColor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel x:Name="StackPanel">
        <lib:ColorUserControl x:Name="colorUserControl" Color="Red" ColorChanged="colorUserControl_ColorChanged"></lib:ColorUserControl>
        <TextBlock x:Name="ColorText"></TextBlock>
    </StackPanel>
</Window>
