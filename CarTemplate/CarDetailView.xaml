<UserControl x:Class="CarTemplate.CarDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarTemplate"
             mc:Ignorable="d" >
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="6">
        <StackPanel Margin="5">
            <Image x:Name="ImagePhoto" Width="400" Height="250"></Image>
            <StackPanel Orientation="Horizontal" Margin="5,0">
                <TextBlock Text="Name:" FontWeight="Bold" FontSize="20"></TextBlock>
                <TextBlock x:Name="TextBlockName" FontSize="20" Margin="5,0"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5,0">
                <TextBlock Text="Automaker:" FontWeight="Bold"></TextBlock>
                <TextBlock x:Name="TextBlockAutomaker" Margin="5,0"></TextBlock>
                <TextBlock Text="Year:" FontWeight="Bold"></TextBlock>
                <TextBlock x:Name="TextBlockYear" Margin="5,0"></TextBlock>
                <TextBlock Text="Top Speed:" FontWeight="Bold"></TextBlock>
                <TextBlock x:Name="TextBlockToSpeed" Margin="5,0"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
